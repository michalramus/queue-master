generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Client {
    number      Int @id
    categoryId  String
    category    Category @relation(fields: [categoryId], references: [id])
    status      Status
    seat          Int?
    creationDate  DateTime @default(now())
}

enum Status {
    Waiting
    InService
}

model Category {
    id          String @id
    name        String
    counter     Int
    clients     Client[]
}
