{
    "appId": "com.m-ramus.queue-system-kiosk",
    "files": [
        "dist-electron",
        "dist-react"
    ],
    "extraResources": [
        {
            "from": "./dist-electron/preload.cjs",
            "to": "./dist-electron/preload.cjs"
        },
        {
            "from": "./src/ui/assets/",
            "to": "./assets",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "../../i18n/",
            "to": "./i18n",
            "filter": [
                "**/*"
            ]
        }
    ],
    "icon": "./logo.png",
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": [
            "portable",
            "msi"
        ]
    }
}
